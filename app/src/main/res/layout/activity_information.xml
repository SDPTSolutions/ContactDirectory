<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:layout_weight="0.5"
            android:textSize="32dp"
            android:textAlignment="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_map_24"
            android:padding="10dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:padding="25dp"
        >

        <TextView
            android:id="@+id/txtNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name        :   "
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patrick Macaraig"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/txtNameTitle"
            />

        <TextView
            android:id="@+id/txtLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location   :   "
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/txtNameTitle"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sa Dulo ng Walang Hanggan"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/txtNameTitle"
            android:layout_toEndOf="@id/txtLocationTitle"
            />

        <TextView
            android:id="@+id/txtNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number    :   "
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/txtLocationTitle"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="012345678910"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/txtLocationTitle"
            android:layout_toEndOf="@id/txtNumberTitle"
            />

        <TextView
            android:id="@+id/txtScheduleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule  :   "
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/txtNumberTitle"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/txtSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrow"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/txtNumberTitle"
            android:layout_toEndOf="@id/txtScheduleTitle"
            />

    </RelativeLayout>

</RelativeLayout>